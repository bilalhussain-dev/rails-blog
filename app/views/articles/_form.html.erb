<div class="form__layout">
  <%= form_for @article do |f| %>
    <div class="form-group">

      <%= f.text_field :title, class: 'form-control', placeholder:'Post Title' %>
    </div>
    <div class="form-group mt-2">

      <%= f.text_area :description, class: 'form-control', rows:'5', placeholder:"What's in your mind?" %>
    </div>

    <div class="form-group mt-4">
      <%= f.submit class:'btn btn-secondary btn-lg' %>
      <button type="reset" class="btn btn-warning btn-lg ms-2">Reset</button>
    </div>

  <%end%>

</div>