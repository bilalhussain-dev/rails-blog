<div class="form__layout">
  <h1 class="text-center">Login Account</h1>

  <%= form_for :session do |f| %>
    <div class="form-group my-3">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email', autocomplete:'off' %>
    </div>
    <div class="form-group my-3">
      <%= f.password_field :password, class: 'form-control', placeholder:'Enter Password', autocomplete:'off' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Sign In', class:'btn btn-lg btn-warning rounded'%>
    </div>
  <%end %>
</div>