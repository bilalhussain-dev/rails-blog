<%= form_for @user do |f| %>
  <div class="form-group mt-3">
    <%= f.text_field :username, class:'form-control', placeholder:'Choose a username', autocomplete:'off'  %>
  </div>
  <div class="form-group mt-3">
    <%= f.email_field :email, class:'form-control', placeholder:'Enter Email Address', autocomplete:'off'  %>
  </div>
  <div class="form-group mt-3">
    <%= f.password_field :password, class:'form-control', placeholder:'Choose a Password', autocomplete:'off'  %>
  </div>
  <div class="form-group mt-3">
    <%= f.submit(@user.new_record? ? "Sign up" : "Update Settings", class:'btn btn-lg btn-warning') %>
  </div>
<%end %>